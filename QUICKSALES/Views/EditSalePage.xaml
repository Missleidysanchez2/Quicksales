<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QUICKSALES.Views.EditSalePage"
             Title="Editar Venta">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Editar Venta" FontSize="Large" HorizontalOptions="Center" />
            <Entry x:Name="ClienteEntry" Placeholder="Cliente" />
            <DatePicker x:Name="FechaDatePicker" />
            <Button Text="Guardar" Clicked="OnSaveButtonClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
