<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QUICKSALES.Views.DashboardPage"
             BackgroundColor="#F8D7DA"
             NavigationPage.IconColor="#F8D7DA"
             Title="Dashboard">

    <ContentPage.Content>
        <StackLayout Padding="5" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <!-- Nuevo botón para dirigir a la página de factura -->
            <Button Text="Generar Factura" Clicked="OnGenerateInvoiceButtonClicked" BackgroundColor="#007ACC" TextColor="White" CornerRadius="8" Margin="0,0,0,20"/>
            <!-- Recent Sales -->
    
    <Frame BackgroundColor="White" Padding="10" CornerRadius="5" HasShadow="True" Margin="0,0,0,10">
                    <StackLayout>
                        
                            <Label Text="Ventas Recientes" FontSize="Medium" FontAttributes="Bold" TextColor="Black" />
                          
                            <CollectionView x:Name="RecentSalesCollectionView" SelectionMode="Single" SelectionChanged="OnSelectionChanged">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                <Grid Padding="0,1" ColumnSpacing="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Label Text="{Binding Cliente}" Grid.Column="0" TextColor="Black" FontAttributes="Bold" FontSize="Micro"/>

                                    <Button Text="Eliminar" Clicked="OnEliminSaleClicked" CommandParameter="{Binding .}" HorizontalOptions="EndAndExpand" Grid.Column="1"/>
                                    <Button Text="Editar" Clicked="OnEditSaleClicked" CommandParameter="{Binding .}" HorizontalOptions="EndAndExpand" Grid.Column="2"/>

                                    <Grid Grid.ColumnSpan="3" Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Label Text="{Binding NombreProducto}" Grid.Column="0" TextColor="Gray" />
                                        <Label Text="{Binding Precio, StringFormat='{0:C}'}" Grid.Column="1" TextColor="Gray"/>
                                        <Label Text="{Binding Cantidad}" Grid.Column="2" TextColor="Gray"/>
                                        <Label Text="{Binding Total, StringFormat='{0:C}'}" Grid.Column="3" TextColor="Black" FontAttributes="Bold"/>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                                </CollectionView.ItemTemplate>

                            </CollectionView>

                        </StackLayout>
             
            </Frame>



                    <Frame BackgroundColor="White" Padding="5" CornerRadius="8" HasShadow="True"
                       Grid.Row="1">
                        <StackLayout>
                            <Label Text="Productos Disponibles" FontSize="Medium" FontAttributes="Bold" TextColor="Black" />
                            <CollectionView x:Name="AvailableProductsCollectionView" SelectionMode="Single" SelectionChanged="OnProductSelected">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout>
                                            <Grid ColumnSpacing="6">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                   
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                        
                                        <StackLayout Grid.Column="0">
                                                    <Label Text="{Binding Id}" TextColor="Gray"/>
                                                </StackLayout>
                                                <StackLayout Grid.Column="1">
                                                    <Label Text="{Binding NombreP}" FontAttributes="Bold" TextColor="Black"/>
                                                    <StackLayout Orientation="Horizontal" HorizontalOptions="StartAndExpand" Margin="0,5,0,0">
                                                        <Button Text="Editar"  Clicked="OnEditProductClicked" CommandParameter="{Binding .}" HorizontalOptions="Center" Margin="0,15,0,0" FontSize="16"/>
                                                    </StackLayout>
                                                </StackLayout>
                                                <StackLayout Grid.Column="2">
                                                    <Label Text="{Binding Talla}" TextColor="Gray"/>
                                                </StackLayout>
                                                <StackLayout Grid.Column="3">
                                                    <Label Text="{Binding Color}" TextColor="Gray" />
                                                    <StackLayout Orientation="Horizontal" HorizontalOptions="StartAndExpand" Margin="0,5,0,0">
                                                        <Button Text="Eliminar"   Clicked="OnDeleteProductClicked" CommandParameter="{Binding . }" HorizontalOptions="Center" Margin="10,15,0,0" FontSize="16"/>
                                                    </StackLayout>
                                                </StackLayout>
                                                <StackLayout Grid.Column="4">
                                                    <Label Text="{Binding Precio, StringFormat='{0}'}" TextColor="Black"/>
                                                </StackLayout>
                                                <StackLayout Grid.Column="5">
                                                    <Label Text="{Binding Stock}" TextColor="Gray"/>
                                                </StackLayout>
                                            </Grid>
                                        </StackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </ContentPage.Content>
</ContentPage>
